{
	"name": "karizma",
	"version": "1.2.8",
	"description": "Karizma",
	"main": "main.js",
	"scripts": {
		"start": "electron .",
		"test": "rm -rf dist && electron-builder --x64 --win",
		"build": "rm -rf dist && electron-builder --x64 --win --publish always"
	},
	"build": {
		"appId": "com.binariez.Ja3farMortada.karizma",
		"productName": "Karizma",
		"artifactName": "${name}-${version}.${ext}",
		"target": "NSIS",
		"win": {
			"target": "nsis"
		},
		"publish": [
			{
				"provider": "github",
				"owner": "Ja3farMortada",
				"repo": "karizma-electron",
				"releaseType": "release"
			}
		],
		"npmRebuild": "false",
		"directories": {
			"buildResources": "resources"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Ja3farMortada/karizma-electron.git"
	},
	"author": "Binariez LLC",
	"license": "ISC",
	"dependencies": {
		"angular": "^1.8.3",
		"bootstrap": "^5.3.7",
		"electron-context-menu": "^3.6.1",
		"electron-log": "^5.4.2",
		"electron-updater": "^6.6.2"
	},
	"devDependencies": {
		"electron": "^32.3.3",
		"electron-builder": "^26.0.12"
	}
}